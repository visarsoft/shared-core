{
  "name": "visar-shared",
  "version": "1.0.0",
  "description": "internal repository for shared modules",
  "main": "./lib/index.js",
  "jsnext:main": "es/index.js",
  "private": true,
  "scripts": {
    "lint": "eslint src --fix",
    "test": "yarn lint && flow",
    "build": "./node_modules/.bin/babel src --out-dir lib",
    "prepublish": "npm run build",
    "postinstall": "npm run build",
    "precommit": "lint-staged && yarn test",
    "prepush": "yarn test && yarn prod:build"
  },
  "pre-push": [
    "lint"
  ],
  "repository": {
    "url": "https://bitbucket.org/lito/visar-webapp-shared",
    "type": "git"
  },
  "author": "RoMay <romay.ua@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@types/googlemaps": "^3.30.5",
    "@types/markerclustererplus": "^2.1.33",
    "@types/react": "^16.0.36",
    "axios": "^0.16.2",
    "babel-plugin-flow-react-proptypes": "^13.0.1",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.24.1",
    "bowser": "^1.9.1",
    "jquery": "^3.3.1",
    "lodash": "^4.17.4",
    "react": "^16.2.0",
    "react-dom": "16.2.0",
    "react-google-maps": "^9.4.3",
    "react-helmet": "^5.2.0",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "react-slick": "^0.16.0",
    "redux": "^3.7.2",
    "serve-favicon": "^2.4.5",
    "styled-components": "^2.4.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-plugin-flowtype": "^2.33.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^5.0.1",
    "eslint-plugin-react": "^7.0.1",
    "flow-bin": "^0.63.1",
    "lint-staged": "^3.4.1",
    "pre-push": "^0.1.1",
    "rimraf": "^2.6.1"
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "plugin:flowtype/recommended"
    ],
    "plugins": [
      "react",
      "flowtype"
    ],
    "env": {
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true,
        "modules": true
      }
    },
    "settings": {
      "react": {
        "pragma": "React"
      },
      "flowType": {
        "onlyFilesWithFlowAnnotation": true
      }
    },
    "rules": {
      "jsx-quotes": [
        2,
        "prefer-single"
      ],
      "jsx-a11y/href-no-hash": "off",
      "no-unexpected-multiline": 2,
      "react/no-danger": 0,
      "react/prefer-stateless-function": [
        "error",
        {
          "ignorePureComponents": true
        }
      ],
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "arrow-parens": [
        "error",
        "as-needed"
      ]
    }
  },
  "babel": {
    "presets": [
      "env",
      "flow",
      "react",
      "stage-0",
      "stage-2"
    ],
    "plugins": [
      "transform-flow-strip-types"
    ]
  }
}
